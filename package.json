{
  "name": "atlas-platform",
  "version": "2.0.0-alpha",
  "description": "ATLAS - THRiVE Hub LaunchPad Fellowship gamified LMS platform",
  "author": "THRiVE Hub",
  "license": "PROPRIETARY",
  "private": true,
  "workspaces": [
    "frontend",
    "backend",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently -n \"FRONTEND,BACKEND\" -c \"cyan,magenta\" \"pnpm dev:frontend\" \"pnpm dev:backend\"",
    "dev:frontend": "cd frontend && pnpm dev",
    "dev:backend": "cd backend && pnpm start:dev",
    "build": "pnpm -r build",
    "build:frontend": "cd frontend && pnpm build",
    "build:backend": "cd backend && pnpm build",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "format": "prettier --write '**/*.{ts,tsx,js,jsx,json,md}'",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "prettier": "^3.2.5",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
